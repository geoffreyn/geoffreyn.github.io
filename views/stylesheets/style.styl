    margin-right auto
    width 700px
    padding 14px
    color #000
        
#wrapper
  padding-left: 250px
  position: relative
  //background: #4EA985
  width 810 px
  
#magnify
    z-index 1
    position absolute
    margin 232px
    margin-left 187px
   
#icon 
    z-index 1
    position absolute
    margin 10px
 
#logo
  width: 250px
  margin: 20px
  background: #003073

#userList
    margin-left auto
    margin-right auto
    
    table
        border-collapse: separate
        border-spacing: 1px
        background: #CCC
        widght 250px

        th
            background: #EEE
            font-weight: 600
            padding: 10px 20px
